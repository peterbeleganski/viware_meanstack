.container
    .well
        form.form-horizontal(name="signUpForm")
            fieldset
                legend.text-center Create new User
                .form-group
                    label.col-md-2.control-label(for="first-name") First Name
                    .col-md-8
                        input.form-control(type="text", placeholder="First Name..", ng-model="user.firstName", required)
                .form-group
                    label.col-md-2.control-label(for="last-name") Last Name
                    .col-md-8
                        input.form-control(type="text", placeholder="Last Name..", ng-model="user.lastName", required)
                .form-group
                    label.col-md-2.control-label(for="username") Username
                    .col-md-8
                        input.form-control(type="text", placeholder="Username..", ng-model="user.username", required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-8
                        input.form-control(type="password", placeholder="Password..", ng-model="user.password", required)

                 .form-group
                     .col-sm-offset-2.col-md-10
                        button.btn.btn-primary(ng-click="signUp(user)", ng-disabled="signUpForm.$invalid" ) Create
                        a.btn.btn-default(href="#/") Cancel


