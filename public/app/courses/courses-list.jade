.container
    .row
        .col-md-2
            h4.text-center  Search
        .col-md-4
            input.form-control(type="text" placeholder="Search" ng-model="search")
        .col-md-2
            h4.text-center  Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Title
                option(value="published") Date published
    br
    br
    .row
        .col-md-6(ng-repeat="course in courses | filter:search | orderBy: sort")
            .panel.panel-success
                .panel-heading.text-center {{course.tag }}
                .panel-body
                    .row
                        .col-md-6
                            .h4.text-center
                                a(href="#/courses/{{course._id}}") {{ course.title}}
                             h5
                                strong Published:
                                span.text-muted {{ course.published | date }}
                             h5
                                strong Instructor:
                                span.text-muted {{ course.instructor }}
                            a.btn.btn-success(href="#/courses/{{course._id}}") Go to video..
                        .col-md-5.text-center
                            img(src="{{course.img}}")



